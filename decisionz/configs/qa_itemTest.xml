		  <page id="pageStart" >
			<content>
			    <dynamic>
					<condition name="item" value=""/>
					<content>
						Items = Zero
					</content>
				</dynamic>
                <dynamic>
					<content>
						You have <print dvname='item'></print> items.
					</content>
				</dynamic>
            </content>
		  </page>
		</scene>-->
	</scenes>
</config>
